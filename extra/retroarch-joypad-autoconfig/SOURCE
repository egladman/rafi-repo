src_unpack() {
    git::clone https://github.com/libretro/retroarch-joypad-autoconfig.git
}

src_prepare() {
    git::checkout "$PKG_SPEC_REF"
}

src_install() {
    find . -iname '*.cfg' -type f -exec install -Dm 644 {} "${PKG_PFX_DIR}"/usr/share/libretro/autoconfig/{} \;
    install -Dm 644 -t "${PKG_PFX_DIR}"/usr/share/doc/$pkgname README.md retropad_layout.png
    install -Dm 644 -t "${PKG_PFX_DIR}"/usr/share/licenses/${PKG_SPEC_NAME} COPYING
}
